@model Actor
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group text-center">
                        <img src="@Model.ProfilePictureURL" class="rounded-circle" style="max-width:200px" alt="@Model.FullName"/>
                        <h2 class="p-3 text-info">@Model.FullName</h2>
                    </div>
                    <div class="form-group text-center text-danger h3">
                        Are You Shure to delete Actor "@Model.FullName"?
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type ="submit" value="Yes" class="btn btn-danger float-right" /> 
                            <a class="btn btn-success" asp-action="Index"><i class="fa fa-backward"></i></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

