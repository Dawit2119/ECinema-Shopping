@model Actor
@{
    ViewData["Title"] = "Actor-GetDetails";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img src="@Model.ProfilePictureURL" id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" alt=" The image will preview here..." />
                        <h3 class="text-primary text-decoration-underline  p-1">
                            @Model.FullName
                        </h3>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input disabled asp-for="FullName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input disabled asp-for="Bio" class="form-control" />
                    </div>

                    <div class="form-group">
                        <a class="btn btn-info float-right" asp-route-id ="@Model.Id" asp-action="Update"><i class="fa fa-edit"></i> Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index"><i class="fa fa-backward"></i> Back</a>
                    </div>
            </div>
        </div>
    </div>
</div>

