@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Cinemas";
}

<div class="container p-3">

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="row h2 pl-5 mb-3 text-primary">Cinemas</div>

            @if (Model.Count() > 0)
            {

                <table class="table table-striped">
                    <thead>
                        <tr class="text-center">
                            <th class="text-success h3">@Html.DisplayNameFor(model => model.Logo)</th>
                            <th class="text-info h3">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-secondary h3">@Html.DisplayNameFor(model => model.Description)</th>
                            <th class="h3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var actor in Model)
                            {
                                <tr>
                                    <td width="20%"><img class="align-middle rounded-circle" height="100" src="@actor.Logo" alt="@actor.Logo" /></td>
                                    <td width="10%" class="align-middle text-secondary">@actor.Name</td>
                                    <td width="20%" class=" align-middle text-secondary">@actor.Description</td>
                                    <td class="align-middle">
                                        <a class="btn btn-outline-primary"><i class="fa fa-edit"></i>Edit</a>|
                                        <a class="btn btn-outline-info"><i class="fa fa-eye"></i>Details</a>|
                                        <a class="btn btn-danger text-white"><i class="fa fa-trash"></i>Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="h3 text-info">No Cinemas in Database...</div>
            }
        </div>
    </div>
</div>